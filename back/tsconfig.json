{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["es2021", "dom"],
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
